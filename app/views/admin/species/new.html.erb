<%= form_tag(admin_species_create_path, method: "post") do %>
  <div class="form-group row">
    <label for="name" class="col-sm-2 col-form-label">名前</label>
    <div class="col-sm-10">
      <input type="text" name="name" class="form-control" placeholder="トマト">
    </div>
  </div>

  <div class="form-group row">
    <label for="family" class="col-sm-2 col-form-label">科</label>
    <div class="col-sm-10">
      <input type="text" name="family" class="form-control" placeholder="ナス科">
    </div>
  </div>

  <%= render "plant_season_form_group" %>

  <%= link_to "一覧に戻る", species_index_path, class: "btn btn-secondary" %>
  <%= submit_tag "作成", class: "btn btn-primary" %>
<% end %>
